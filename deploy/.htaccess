# Hostinger 배포용 .htaccess 파일

# 리다이렉트 설정 (구조 변경 대응)
Redirect 301 /index/index.html /index.html
Redirect 301 /maintenance/maintenance.html /maintenance.html
Redirect 301 /products.html /products/products.html
# Favicon fallback
Redirect 301 /favicon.ico /asset8.png

# 기본 인덱스 파일 설정 (403 에러 방지)
DirectoryIndex index.html index.htm

# 디렉토리 리스팅 비활성화 (보안)
Options -Indexes +FollowSymLinks

# UTF-8 인코딩 설정
AddDefaultCharset UTF-8

# HTML 파일을 UTF-8로 서빙
AddCharset UTF-8 .html .css .js .json

# MIME 타입 설정
<IfModule mod_mime.c>
  AddType text/html .html
  AddType text/css .css
  AddType application/javascript .js
  AddType image/png .png
  AddType image/jpeg .jpg .jpeg
  AddType image/gif .gif
</IfModule>

# 캐시 설정 (성능 최적화)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Gzip 압축 (성능 최적화)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# 보안 헤더
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
</IfModule>
